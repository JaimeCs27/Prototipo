<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/styles.css">
    <title>Catálogo de Productos</title>
</head>
<body>
    <header>
        <h1>Catálogo de Productos</h1>
        <nav>
            <a href="/">Log out</a>
        </nav>
    </header>
    <main class="grid-container">
            <% catalog.forEach( function(item) { %>
                <form>
                    <div class="producto">
                        <img src="<%= item.photo.substring(7) %>" class="product-image">
                        <h2><%= item.name %></h2>
                        <p><%= item.description %></p>    
                        <div class="botones">
                            <button class="ver-button" type="submit" formmethod="post" formaction="/productDetailAdmin">Ver</button>
                            <button class="editar-button" type="submit" formaction="/editProduct" formmethod="post">Editar</button>
                            <button class="eliminar-button" type="submit" formaction="/deleteProduct" formmethod="post">Eliminar</button>
                        </div>
                        <input name="idProduct" value="<%= item.id %>" hidden>
                    </div>
                </form>
                <% }); %>
        <form>
        <div class="producto">
            <h2>Agregar Nuevo Producto</h2>
            <button class="agregar-button" type="submit" formaction="/addProducts" formmethod="post">Agregar</button>
        </div>
        </form>
    </main>
</body>
</html>
